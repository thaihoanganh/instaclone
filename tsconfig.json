{
    "compilerOptions": {
        "module": "amd",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {}
    },
    "typeRoots": ["*.d.ts", "types/*.d.ts"],
    "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}
